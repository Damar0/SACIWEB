    <h1 class="m-2">Agregar Sensor</h1>

    <form action="/agregarsensor" method="POST" style="width: 80%; margin-left: 10%;">
        <div class="form-group">
            <label for="name">Nombre del sensor:</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="form-group">
            <label for="description">Descripción:</label>
            <textarea class="form-control" id="description" name="description"></textarea>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="max">Valor máximo:</label>
                <input type="number" class="form-control" id="max" name="max" required>
            </div>

            <div class="form-group col-md-6">
                <label for="min">Valor mínimo:</label>
                <input type="number" class="form-control" id="min" name="min" required>
            </div>
        </div>

        <div class="form-group">
            <label for="status">Estado:</label>
            <select class="form-control" id="status" name="status">
          <option value="activo">Activo</option>
          <option value="inactivo">Inactivo</option>
        </select>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="module">Módulo:</label>
                <input type="text" class="form-control" id="module" name="module" required>
            </div>

            <div class="form-group col-md-6">
                <label for="pin">Pin:</label>
                <input type="text" class="form-control" id="pin" name="pin" required>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Crear sensor</button>
    </form>



