<%- include('../layout/header'); %>


    <br><br><br>

    <form action="/agregarsensor" method="POST">
        <label for="name">Nombre del sensor:</label>
        <input type="text" id="name" name="name" required>

        <label for="description">Descripción:</label>
        <textarea id="description" name="description"></textarea>

        <label for="max">Valor máximo:</label>
        <input type="number" id="max" name="max" required>

        <label for="min">Valor mínimo:</label>
        <input type="number" id="min" name="min" required>

        <label for="status">Estado:</label>
        <select id="status" name="status">
      <option value="activo">Activo</option>
      <option value="inactivo">Inactivo</option>
    </select>

        <label for="module">Módulo:</label>
        <input type="text" id="module" name="module" required>

        <label for="pin">Pin:</label>
        <input type="number" id="pin" name="pin" required>

        <button type="submit">Crear sensor</button>
    </form>


